<Window x:Class="SPLab7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SPLab7"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="360"
        ResizeMode="NoResize">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <ListBox x:Name="lList" Margin="10" Width="150" Height="200"></ListBox>
            <ListBox x:Name="rList" Margin="10" Width="150" Height="200"></ListBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="input" Margin="10" Width="100"></TextBox>
            <Button Content="Add" Margin="10" Click="Add"></Button>
            <Button Content="ToRight" Margin="10" Click="ToRight"></Button>
            <Button Content="Clear" Margin="10" Click="Clear"></Button>
            <Button Content="Delete" Margin="10" Click="Delete"></Button>
        </StackPanel>
    </StackPanel>
</Window>
